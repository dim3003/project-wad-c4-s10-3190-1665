<%= link_to user_path(user) do %>
  <% if user.avatar_url.present? %>
    <%= image_tag user.avatar_url, class: 'avatar-xs', alt: "Avatar for #{user.name}" %><%= user.name %>
  <% else %>
    <%= image_tag default_avatar(user), class: 'avatar-xs', alt: "Avatar for #{user.name}" %><%= user.name %>
  <% end %>
<% end %>
