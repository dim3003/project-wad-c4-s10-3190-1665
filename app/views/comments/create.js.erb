
var avatar

if (<%= @comment.user.avatar_url.present? %>){
  avatar=  '<%= @comment.user.avatar_url %>';
} else {
  avatar = '<%= default_avatar(@comment.user) %>';
}

var comment = {
  'datetime': '<%= @comment.created_at.strftime("%e %b %Y at %H:%M") %>',
  'commenterUrl': '<%= userLink_path(@comment.user) %>',
  'commenter': '<%= @comment.user.name %>',
  'body': '<%= @comment.body %>',
  'avatar': avatar
}



Comments.displayComment(comment);
